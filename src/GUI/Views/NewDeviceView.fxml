<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="339.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controllers.NewDeviceViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="365.0">
         <children>
            <HBox prefHeight="43.0" prefWidth="600.0">
               <children>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="601.0" text="Add New Device">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="53.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="117.0" text="Device Name:">
                     <HBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="textFieldDeviceName">
                     <HBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="199.0" prefWidth="365.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="109.0" text="Description:">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="15.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextArea fx:id="textAreDescription" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="34.0" prefWidth="297.0">
                     <children>
                        <MFXButton fx:id="buttonAddDevice" onAction="#clickAddDevice" text="Add Device">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </MFXButton>
                     </children>
                     <HBox.margin>
                        <Insets top="25.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="55.0">
                     <children>
                        <MFXButton fx:id="buttonCancel" alignment="BOTTOM_RIGHT" onAction="#clickCancel" text="Cancel">
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                        </MFXButton>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
